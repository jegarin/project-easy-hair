<div class="row container red lighten-5">
  <h2 class="center">Editar minha conta</h2>
  <div class="col s8 push-s2  red lighten-4" >
    <p class="left">Voltar para o <a href="/user/profile"> meu perfil</a></p>
    <p class="right"><a href='/user/edit-password '>Alterar minha senha</a></p>
  </div>
  
  <form class="col s8 offset-s2" action="/user/{{this._id}}/edit" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Nome Completo" id="name" name="userName" type="text" value="{{this.userName}}">
        <label for="name">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Email" id="email" name="userEmail" type="text" value="{{ this.userEmail }}">
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="DDD + Celular" id="cellphone" name="cellphone" type="tel" class="validate" value="{{ this.cellphone }}">
        <label for="cellphone">Celular</label>
        <span class="helper-text" data-error="wrong" data-success="right">Siga esse formato: (xx) 12345-1234</span>
      </div>
    </div>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}

    <button class="btn waves-effect waves-light" type="submit">Editar <i class="material-icons right">edit</i></button>
  </form>
  <form class="col s8 offset-s2" action="/user/{{ this._id }}/delete" method="POST">
    <button class="btn-small waves-effect waves-light red darked-4" type="submit">Deletar minha conta</button>
  </form>
</div>

