    <input type="hidden" id="placeID" name="placeID" type="text">
    <input type="hidden" id="ratingFromGoogle" name="ratingFromGoogle" type="number">
    <div id="imageGallery"></div>
    <div id="reviewsFromGoogle"></div>
    <br><br>
    <button class="btn waves-effect waves-light" type="submit">Cadastrar meu salão<i class="material-icons right">send</i></button>

