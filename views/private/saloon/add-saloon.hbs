    <label for="description">Descrição</label><br>
    <textarea name="description" id="description" cols="50" rows="5"></textarea>
      {{!-- <br><br> --}}
    <label for="coverPhoto">Selecione uma Foto de Capa</label><br>
    <input id="coverPhoto" type="file" name="photo" class="">
