    <div class="row">
      <div class="input-field col s12">
        <input placeholder="Email" id="saloonEmail" name="saloonEmail" type="text" class="validate">
        <label for="saloonEmail">Email</label>
        <div id="blockedFieldsaloonsaloonEmail"></div>
      </div>
    </div>
      {{!-- <br><br>
    <label for="contactNumber">Telefone</label><br>
