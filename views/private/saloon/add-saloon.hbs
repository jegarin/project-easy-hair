      <div class="input-field col s12">
        <textarea placeholder="Horário de Funcionamento" id="businessHours" name="businessHours" type="text" class="validate" rows="7"></textarea>
        <label for="businessHours">Horário de Funcionamento</label>
      </div>
    </div>

